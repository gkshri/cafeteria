<h1>Reset Password</h1>

<%= form_tag password_resets_path, :method => :post do %>
  <div class='field navbar-brand'>
    <%= label_tag :email %>
    <%= email_field_tag :email, params[:email] , :class => "form-control" %>
    </br>
    <%= submit_tag "Reset Password" , :class => "btn btn-primary" %>
  </div>
<% end %>